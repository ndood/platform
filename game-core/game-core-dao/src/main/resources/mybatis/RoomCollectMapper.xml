<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fulu.game.core.dao.RoomCollectDao">
    <resultMap id="RoomCollectResultMap" type="com.fulu.game.core.entity.RoomCollect">
        <id column="id" property="id"/>
        <result column="room_no" property="roomNo"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="RoomCollectResultVOMap" type="com.fulu.game.core.entity.vo.RoomCollectVO"
               extends="RoomCollectResultMap">
    </resultMap>

    <sql id="Base_Column_List">
        id,room_no,user_id,create_time,update_time    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="RoomCollectResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_room_collect
        <where>
            id = #{id}
        </where>
    </select>



    <select id="findAll" resultMap="RoomCollectResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_room_collect
    </select>

    <select id="findByParameter" resultMap="RoomCollectResultMap"
            parameterType="com.fulu.game.core.entity.vo.RoomCollectVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_room_collect
        <where>
            <if test="roomNo != null">
                and room_no = #{roomNo}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from t_room_collect
        <where>
            id = #{id}
        </where>
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.fulu.game.core.entity.RoomCollect">
        insert into
        t_room_collect (room_no,user_id,create_time,update_time)
        values
        (#{roomNo},#{userId},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="com.fulu.game.core.entity.RoomCollect">
        update t_room_collect
        <set>

            <if test="roomNo != null">
                room_no = #{roomNo},
            </if>

            <if test="userId != null">
                user_id = #{userId},
            </if>

            <if test="createTime != null">
                create_time = #{createTime},
            </if>

            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>