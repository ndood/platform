<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fulu.game.core.dao.TagDao">
    <resultMap id="TagResultMap" type="com.fulu.game.core.entity.Tag">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="category_id"  property="categoryId" />
        <result column="user_id"  property="userId" />
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="type" property="type"/>
        <result column="sort" property="sort"/>
        <result column="most" property="most"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="TagResultVOMap" type="com.fulu.game.core.entity.vo.TagVO" extends="TagResultMap">
    </resultMap>

    <sql id="Base_Column_List">
        id,pid,category_id,user_id,name,gender,type,sort,most,create_time,update_time    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="TagResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_tag
        <where>
            id = #{id}
        </where>
    </select>

    <select id="findAll" resultMap="TagResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_tag
    </select>


    <select id="findByTagIds" resultMap="TagResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_tag
        <where>
            id in
            <foreach collection="tagIds" item="tagId" index="index" open="(" close=")" separator=",">
                #{tagId}
            </foreach>
        </where>
    </select>

    <select id="findByParameter" resultMap="TagResultMap" parameterType="com.fulu.game.core.entity.vo.TagVO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_tag
        <where>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
            <if test="most != null">
                and most = #{most}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
        ORDER BY pid ASC
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from t_tag
        <where>
            id = #{id}
        </where>
    </delete>

    <delete id="deleteByPid" parameterType="java.lang.Integer">
        delete from t_tag
        <where>
            pid = #{pid}
        </where>
    </delete>


    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.fulu.game.core.entity.Tag">
        insert into
        t_tag (pid,category_id,user_id,name,gender,type,sort,most,create_time,update_time)
        values
        (#{pid},#{categoryId},#{userId},#{name},#{gender},#{type},#{sort},#{most},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="com.fulu.game.core.entity.Tag">
        update t_tag
        <set>

            <if test="pid != null">
                pid = #{pid},
            </if>

            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>

            <if test="userId != null">
                user_id = #{userId},
            </if>

            <if test="name != null">
                name = #{name},
            </if>

            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="most != null">
                most = #{most},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>